@model IndeavrExam.Web.ViewModels.Games.GetGameDetailsViewModel

@{
    this.ViewData["Title"] = "Details for game";
}

<div class="text-center">
    <h1>@this.ViewData["Title"]</h1>
</div>
<div class="d-flex justify-content-center">
    <div class="card col-md-4">
        <h5 class="card-title text-center">
            Title: @Model.Title
        </h5>
        <img class="card-img-top" src="@Model.ImageUrl" width="100" height="300" alt="Card image cap">
        <div class="card-body">
            <p class="card-text text-center"><small class="text-muted">Description: @Model.Description</small></p>
            <p class="card-text text-center"><small class="text-muted">Price: @Model.Price</small></p>
            <p class="card-text text-center"><small class="text-muted">Release Date: @Model.ReleaseDateAsString</small></p>
        </div>
    </div>
</div>